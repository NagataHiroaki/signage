{
  "name": "htdocs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "del-cli ./dist",
    "build:webpack": "webpack",
    "build:copy": "cpx \"./src/mock/**/*.{js,gif,svg,png,jpg,html}\" ./dist",
    "build": "npm-run-all -s clean build:copy build:webpack",
    "watch:server": "browser-sync start --config bs-config.js",
    "watch:webpack": "webpack -w",
    "watch:prettier": "onchange \"./src/(!mock)/**/*.{js,scss,html}\" -- prettier --config ./prettierrc.json --write {{changed}}",
    "watch:copy": "cpx \"./src/mock/**/*.{js,gif,svg,png,jpg,html}\" ./dist -w",
    "watch": "npm-run-all -p watch:copy watch:server watch:webpack watch:prettier",
    "start": "npm-run-all -s build watch"
  },
  "repository": {},
  "keywords": [],
  "author": "Nagata Hiroaki",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.6",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.9",
    "del-cli": "^1.1.0",
    "ejs-cli": "^2.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-loader": "^2.0.10",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.0",
    "sass-loader": "^6.0.6",
    "stylelint-webpack-plugin": "^0.10.1",
    "webpack": "^3.10.0"
  }
}
